<%= turbo_frame_tag dom_id(post, :new_comment) do %>
  <%= form_with(model: [post, Comment.new], local: false, html: { class: "new-comment-form" }) do |form| %>
    <div class="form-group mb-2">
      <%= form.text_area :content, placeholder: "Write a comment...", class: "form-control", rows: 2, style: "resize: none; background-color: #2e2e2e; color: #fff; border: 1px solid #444; border-radius: 5px;" %>
    </div>
    <div class="form-group text-end">
      <%= form.submit "Add Comment", class: "btn btn-primary", style: "background-color: #007bff; border: none;" %>
    </div>
  <% end %>
<% end %>
