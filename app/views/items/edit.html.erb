<% content_for :title, "Editing item" %>
  <%= turbo_frame_tag "modal" do %>
  <h1>Editing item</h1>

  <%= render "form", item: @item %>

  <br>

  <div>
    <%= link_to "Show this item", @item %> |
    <%#= link_to "Back to items", items_path %>
      <%= link_to "Cancel", "#", data: {
        controller: "modals",
        action: "modals#close"
      }, class: "cancel-button" %>    
  </div>

<% end %>
