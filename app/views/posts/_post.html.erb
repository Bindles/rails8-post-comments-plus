<%# app/views/posts/_post.html.erb %>
<div id="<%= dom_id(post) %>">

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  <p>
    <%= link_to "Show this post", post %>
    <%= render 'comments/comments', post: post %>
  </p>
</div>
